<Window x:Class="patterns_lab2_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:patterns_lab2_2"
        mc:Ignorable="d"
        Title="Clan Battle" Height="700" Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="700"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="10">
            <Canvas Background="ForestGreen" Width="600" Height="600">

                <ItemsControl ItemsSource="{Binding Clans}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Rectangle Width="{Binding TerritoryWidth}"
                                   Height="{Binding TerritoryHeight}"
                                   Stroke="White"
                                   StrokeThickness="1"
                                   StrokeDashArray="4 2" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding TerritoryX}" />
                            <Setter Property="Canvas.Top" Value="{Binding TerritoryY}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding AllPersons}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Ellipse Width="10" Height="10"
                                     Fill="{Binding Color}"
                                     Stroke="Black" StrokeThickness="1"/>

                                <TextBlock Text="👑"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,-12,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLeader}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ItemsControl>

            </Canvas>
        </Border>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Clan Battle" FontSize="24" FontWeight="Bold"/>
            <Button Grid.Row="1"
                Content="Generate New Clan"
                Command="{Binding GenerateNewClanCommand}"
                Margin="0,10,0,20" />

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Clans}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                                <StackPanel>

                                    <TextBlock Text="{Binding Name}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{Binding ClanBrush}"/>

                                    <TextBlock Text="{Binding LeaderInfo}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           TextWrapping="Wrap"
                                           Margin="0,5,0,10"/>

                                    <TextBlock Text="All Players:" FontWeight="Bold"/>

                                    <ItemsControl ItemsSource="{Binding Persons}" Margin="10,5,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding InfoText}" Foreground="{Binding Color}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Content="Generate Text Report"
                Command="{Binding GenerateTextReportCommand}" />

            <Button Grid.Row="1" Content="Generate Graphics Report"
                Command="{Binding GeneratePseudoGraphicsReportCommand}" />

            <TextBox Grid.Row="2"
                 Text="{Binding GeneratedReport}"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 Height="200"/>

        </Grid>
    </Grid>

</Window>
