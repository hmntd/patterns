<Window x:Class="patterns_lab2_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:patterns_lab2_2"
        mc:Ignorable="d"
        Title="Clan Battle" Height="700" Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="700"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="10">
            <Canvas Background="ForestGreen" Width="600" Height="600">

                <ItemsControl ItemsSource="{Binding Clans}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Rectangle Width="{Binding TerritoryWidth}"
                                   Height="{Binding TerritoryHeight}"
                                   Stroke="White"
                                   StrokeThickness="1"
                                   StrokeDashArray="4 2" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding TerritoryX}" />
                            <Setter Property="Canvas.Top" Value="{Binding TerritoryY}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ItemsControl>

                <ItemsControl ItemsSource="{Binding AllPersons}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Border x:Name="InfoPopup"
                        Background="#CC000000" 
                        BorderBrush="White" 
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="5"
                        Visibility="Collapsed" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Margin="-100,-60,-100,15">
                                    <TextBlock Text="{Binding InfoText}" 
                               Foreground="White" 
                               FontSize="11" 
                               FontWeight="Normal"
                               TextAlignment="Center"/>
                                </Border>

                                <Grid Background="Transparent" Width="14" Height="14">
                                    <Ellipse Width="10" Height="10" 
                              Fill="{Binding Color}" 
                              Stroke="{Binding StrokeColor}" 
                              StrokeThickness="{Binding StrokeThickness}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>

                                    <TextBlock Text="👑" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,-14,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>

                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLeader}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                            </Grid>

                            <DataTemplate.Triggers>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="InfoPopup" Property="Visibility" Value="Visible"/>
                                </Trigger>

                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                    <Setter TargetName="InfoPopup" Property="Visibility" Value="Visible"/>
                                </DataTrigger>

                                <DataTrigger Binding="{Binding IsLeader}" Value="False">
                                </DataTrigger>

                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>

                            <Setter Property="Panel.ZIndex" Value="1"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Panel.ZIndex" Value="999"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                    <Setter Property="Panel.ZIndex" Value="998"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </ItemsControl>

            </Canvas>
        </Border>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Clan Battle" FontSize="24" FontWeight="Bold"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10">
                <Button Content="💾 Save Checkpoint" 
                Command="{Binding SaveCheckpointCommand}" 
                Width="120" Margin="0,0,10,0" Padding="5"/>

                <Button Content="↩️ Load Checkpoint" 
                Command="{Binding LoadCheckpointCommand}" 
                Width="120" Padding="5"/>
            </StackPanel>

            <Button Grid.Row="2"
                Content="Generate New Clan"
                Command="{Binding GenerateNewClanCommand}"
                Margin="0,10,0,20" />

            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Clans}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="{Binding ClanBrush}"/>
                                    <TextBlock Text="{Binding LeaderInfo}" FontSize="12" FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,5,0,10"/>

                                    <Separator Margin="0,5"/>
                                    <TextBlock Text="Squad Management:" FontSize="14" FontWeight="Bold"/>

                                    <TextBlock Text="Target Squad:"/>
                                    <ComboBox ItemsSource="{Binding SquadVMs}" 
                              SelectedItem="{Binding SelectedSquad}"
                              DisplayMemberPath="Name"
                              Margin="0,2,0,10"/>

                                    <TextBlock Text="Leader Commands:"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Button Grid.Row="1" Grid.Column="0" Content="Back" 
                                Command="{Binding SendCommandLeft}" 
                                Margin="2" Background="LightYellow"/>

                                        <Button Grid.Row="1" Grid.Column="1" Content="Fight!" 
                                Command="{Binding SendCommandFight}" 
                                Margin="2" Background="LightCoral" FontWeight="Bold"/>

                                        <Button Grid.Row="1" Grid.Column="2" Content="Forward" 
                                Command="{Binding SendCommandRight}" 
                                Margin="2" Background="LightYellow"/>

                                    </Grid>
                                    <Separator Margin="0,10"/>
                                    <TextBlock Text="All Players:" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>
                                    <ItemsControl ItemsSource="{Binding Persons}" Margin="10,5,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding InfoText}" Foreground="{Binding Color}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Content="Generate Text Report"
                Command="{Binding GenerateTextReportCommand}" />

            <Button Grid.Row="1" Content="Generate Graphics Report"
                Command="{Binding GeneratePseudoGraphicsReportCommand}" />

            <TextBox Grid.Row="2"
                 Text="{Binding GeneratedReport}"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 Height="200"/>

        </Grid>
    </Grid>

</Window>
