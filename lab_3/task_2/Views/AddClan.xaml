<Window x:Class="patterns_lab2_2.Views.AddClan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:patterns_lab2_2.Views"
        mc:Ignorable="d"
        Title="AddClan" Height="250" Width="300">
    <StackPanel Margin="15">
        <TextBlock Text="Clan Name:"/>
        <TextBox x:Name="txtName" Text="{Binding ClanName}" Margin="0,5,0,15" FontSize="14"/>

        <TextBlock Text="Clan Color:"/>
        <ComboBox ItemsSource="{Binding ColorOptions}" 
                  SelectedItem="{Binding SelectedColor}"
                  Margin="0,5,0,20">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Rectangle Fill="{Binding}" Width="100" Height="20" Stroke="Black" StrokeThickness="1"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="OK" 
                    Margin="0,0,5,0" Padding="10,5"
                    IsDefault="True" Click="OkButton_Click"/>

            <Button Grid.Column="1" Content="Cancel" 
                    Margin="5,0,0,0" Padding="10,5"
                    IsCancel="True"/>
        </Grid>
    </StackPanel>
</Window>
